@model Note
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <div class="d-flex justify-content-between align-items-center">
                <h4 class="card-title">Create a new note</h4>

            </div>

            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <form class="forms-sample" method="post">
                        <div class="form-group">
                            <label asp-for="Title">Title</label>
                            <input asp-for="Title" class="form-control">
                            <span asp-validation-for="Title"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description">Description</label>
                            <textarea  asp-for="Title" class="form-control"  rows="2"></textarea>
                            <span asp-validation-for="Description"></span>

                        </div>

                        @*<div class="form-group">
                            <label asp-for="Deadline">Deadline</label>
                            
                            Dealine ucun kalendar olacaq

                            <span asp-validation-for="Deadline"></span>

                        </div>*@

                       

                        <button asp-action="Index" type="submit" class="btn btn-primary mr-2">Submit</button>
                        <button asp-action="Index" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>


@section Scripts{ 
<partial name="_ValidationScriptsPartial"/>
}
